    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="360dp"
        android:padding="12dp"
        android:layout_height="250dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT 7ᵗʰ Semester Project"
            android:textFontWeight="650"
            android:fontFamily="@font/malgun"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="10dp"/>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:cardCornerRadius="9dp"
           app:strokeWidth="2dp"
           app:strokeColor="#1D000000"
           app:cardElevation="4dp">

           <LinearLayout
               android:background="#57C3C0C0"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:layout_margin="14dp"
                   android:orientation="horizontal">
                   <com.google.android.material.textview.MaterialTextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="My Location"
                       android:fontFamily="@font/malgun"
                       android:textFontWeight="700"
                       android:textSize="18dp"/>
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/location_24"
                       android:layout_marginLeft="8dp"/>

                   <ImageButton
                       android:layout_width="wrap_content"
                       android:layout_height="28dp"
                       android:layout_marginRight="0dp"
                       android:layout_marginLeft="124dp"
                       android:src="@drawable/settings_24"
                       android:onClick="renameDevice"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="300dp"
                   android:layout_height="110dp"
                   android:orientation="vertical"
                   android:layout_gravity="center_horizontal"
                   android:paddingTop="14dp"
                   android:paddingLeft="8dp"
                   android:paddingBottom="14dp"
                   android:paddingRight="14dp">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <com.google.android.material.textview.MaterialTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/malgun"
                           android:text="Address :"
                           android:textSize="16dp"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/myAddressTextView"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/malgun"
                           android:layout_marginLeft="8dp"
                           android:textSize="16dp"
                           android:hint="Amsterdam"/>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_marginTop="22dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <com.google.android.material.textview.MaterialTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/malgun"
                           android:text="Latitude :"
                           android:textSize="16dp"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/latitudeTextView"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/malgun"
                           android:layout_marginLeft="8dp"
                           android:textSize="16dp"
                           android:hint="0.0000"/>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <com.google.android.material.textview.MaterialTextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/malgun"
                           android:text="Longitude :"
                           android:textSize="16dp"/>

                       <com.google.android.material.textview.MaterialTextView
                           android:id="@+id/longitudeTextView"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/malgun"
                           android:layout_marginLeft="8dp"
                           android:textSize="16dp"
                           android:hint="0.0000"/>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>

       </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/shareLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:fontFamily="@font/malgun"
            android:text="Update my location"
            android:textSize="10dp"
            android:backgroundTint="#009688"
            app:cornerRadius="9dp"
            android:drawableRight="@drawable/my_location_24"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:fontFamily="@font/malgun"
            android:text="Share my location"
            android:textSize="10dp"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="9dp"
            android:drawableRight="@drawable/share_24"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/malgun"
            android:text="Connected Devices"
            android:textSize="22dp"
            android:textFontWeight="700"
            android:layout_gravity="center_vertical"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_android_24"
            android:layout_gravity="center" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <com.isapanah.awesomespinner.AwesomeSpinner
            android:id="@+id/deviceListSpinner"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:spinnerHint="Select a device"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="360dp"
        android:padding="12dp"
        android:layout_height="200dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="9dp"
            app:strokeWidth="2dp"
            app:strokeColor="#1D000000"
            app:cardElevation="4dp">

            <LinearLayout
                android:background="#57C3C0C0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_margin="14dp"
                    android:orientation="horizontal">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:fontFamily="@font/malgun"
                        android:textFontWeight="700"
                        android:textSize="18dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="14dp"
                    android:paddingLeft="8dp"
                    android:paddingBottom="14dp"
                    android:paddingRight="14dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/malgun"
                            android:text="Address :"
                            android:textSize="16dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/connectedDeviceAddressTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/malgun"
                            android:layout_marginLeft="8dp"
                            android:textSize="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/malgun"
                            android:text="Latitude :"
                            android:textSize="16dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/connectedDeviceLatitudeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/malgun"
                            android:layout_marginLeft="8dp"
                            android:textSize="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/malgun"
                            android:text="Longitude :"
                            android:textSize="16dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/connectedDeviceLongitudeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/malgun"
                            android:layout_marginLeft="8dp"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:weightSum="2">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/callPoliceButton"
                android:onClick="emergencyButtonCLickListener"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Police"
                android:fontFamily="@font/malgun"
                android:textSize="12dp"
                android:drawableLeft="@drawable/phone_24"
                android:backgroundTint="#F44336"
                app:cornerRadius="9dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/helplineButton"
                android:onClick="emergencyButtonCLickListener"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helpline"
                android:fontFamily="@font/malgun"
                android:textSize="12dp"
                android:drawableLeft="@drawable/help_24"
                android:backgroundTint="#4CAF50"
                app:cornerRadius="9dp"/>
        </LinearLayout>

</LinearLayout>
</ScrollView>